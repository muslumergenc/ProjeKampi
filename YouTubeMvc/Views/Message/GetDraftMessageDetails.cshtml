@model EntityLayer.Concrete.Message
@{ ViewBag.Title = "GetSendboxMessageDetails";
                Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
  <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Taslak Mesaj Detayları</h1>
                </div>

            </div>
        </div>
  </section>
  <section class="content">
        <div class="container-fluid">
            <div class="row">
                @Html.Action("ContactMenuPartial", "Contact")
                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Mesajı Oku</h3>
                        </div>
                        <div class="card-body p-0">
                            <div class="mailbox-read-info">
                                <h5>Konu: @Html.DisplayFor(x => x.Subject)</h5>
                                <br />
                                <h6>
                                    Alıcı: @Html.DisplayFor(x => x.ReceiverMail)
                                    <span class="mailbox-read-time float-right">
                                        @Model.MessageDate.ToString("dd-MMM-yyyy")
                                    </span>
                                </h6>
                            </div>
                            <div class="mailbox-read-message">
                                <p>@Html.Raw(Model.MessageContent)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
