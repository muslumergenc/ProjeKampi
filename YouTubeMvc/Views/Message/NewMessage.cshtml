@model EntityLayer.Concrete.Message

@{ ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Yeni Mesaj</h1>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            @Html.Action("ContactMenuPartial", "Contact")
            <div class="col-md-9">
                @using (Html.BeginForm("NewMessage", "Message", FormMethod.Post))
                {
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Yeni Mesaj Oluştur</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                @Html.Label("Alıcı Adı")
                @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control" })
                <p class="text-danger text-bold"> @Html.ValidationMessageFor(x => x.ReceiverMail)</p>
            </div>
            <div class="form-group">
                @Html.Label("Konu")
                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                <p class="text-danger text-bold"> @Html.ValidationMessageFor(x => x.Subject)</p>
            </div>
            <div class="form-group">
                @Html.Label("Mesajınız")
                <textarea id="compose-textarea" name="MessageContent" class="form-control" style="height: 300px">
                    </textarea>
            </div>
            <div class="form-group">
                <div class="btn btn-default btn-file">
                    <i class="fas fa-paperclip"></i> Dosya Ekle
                    <input type="file" name="attachment">
                </div>
                <p class="help-block">Max. 32MB</p>
            </div>
        </div>
        <div class="card-footer">
            <div class="float-right">
                <button type="submit" formmethod="post" name="button" value="draft" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslaklara Kaydet</button>
                <button type="submit" name="button" value="kayit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
            </div>
            <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal Et</button>
        </div>
    </div>}
            </div>
        </div>
    </div>
</section>