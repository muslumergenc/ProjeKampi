@using EntityLayer.Concrete
@model List<Content>
<br>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="timeline">
                    @foreach (var item in Model)
                    {
                        <div>
                            <i class="fas fa-comment bg-yellow"></i>
                            <div class="timeline-item">
                                <h3 class="timeline-header">
                                    <a href="#">
                                        <span class="bg-success">@(((DateTime)item.ContentDate).ToString("dd-MMM-yyy"))</span> - @item.Writer.WriterName @item.Writer.WriterSurname
                                    </a>
                                </h3>
                                <div class="timeline-body">
                                    @item.ContentValue
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>



