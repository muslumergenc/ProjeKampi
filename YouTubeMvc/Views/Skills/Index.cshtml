@using EntityLayer.Concrete
@model List<Skills>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>YETENEK LİSTESİ</h2>
<br />
<p>
    @Html.ActionLink("Yetenek Ekle", "Create",null, new { @class = "btn btn-info" })
</p>
<table class="table table table-bordered">
    <tr>
        <th>
            Yetenek Adı
        </th>
        <th>
            Oran
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SkillName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Range)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new{ id = item.SkillId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Sil", "Delete", new {id = item.SkillId },new{@class="btn btn-danger"})
            </td>
        </tr>
    }

</table>


